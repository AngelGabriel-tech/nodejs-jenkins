pipeline {
    agent any
    stages {
        agent any
        stages {
            stage('Install') {
                steps {
                    echo 'Install: npm install, start, stop'
                    sh '''
                        npm install --no-audit --no-fund
                        nohup npm start > server.log 2>&1 &
                        sleep 1
                        npm stop || true
                    '''
                }
            }

            stage('Build') {
                steps {
                    echo 'Build: npm install, start, stop'
                    sh '''
                        npm install --no-audit --no-fund
                        nohup npm start > server.log 2>&1 &
                        sleep 1
                        npm stop || true
                    '''
                }
            }

            stage('Test') {
                steps {
                    echo 'Test: npm install, start, stop'
                    sh '''
                        npm install --no-audit --no-fund
                        nohup npm start > server.log 2>&1 &
                        sleep 1
                        npm stop || true
                    '''
                }
            }

            stage('Start') {
                steps {
                    echo 'Start: npm install, start, stop'
                    sh '''
                        npm install --no-audit --no-fund
                        nohup npm start > server.log 2>&1 &
                        sleep 1
                        npm stop || true
                    '''
                }
            }

            stage('Deploy') {
                steps {
                    echo 'Deploy: npm install, start, stop'
                    sh '''
                        npm install --no-audit --no-fund
                        nohup npm start > server.log 2>&1 &
                        sleep 1
                        npm stop || true
                    '''
                }
            }

            stage('Stop') {
                steps {
                    echo 'Stop: npm install, start, stop'
                    sh '''
                        npm install --no-audit --no-fund
                        nohup npm start > server.log 2>&1 &
                        sleep 1
                        npm stop || true
                    '''
                }
            }
        }
        post {
            always {
                echo 'Post: ensure npm stop'
                sh 'npm stop || true'
            }
        }
    }
