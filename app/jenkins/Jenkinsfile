                    } else {
                        bat "npm stop || exit 0"
                    }
                }
            }
        }
    }
    post {
        always {
            echo 'Post: ensuring demo server is stopped'
            script {
                if (isUnix()) {
                    sh "npm stop || true"
                } else {
                    bat "npm stop || exit 0"
                }
            }
        }
    }
}
